<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.luisro00005513.tarea2perfilusuario.MainActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
    <!--=======Layouts========= -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/photo"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:id="@+id/Imagen_id"
                    />

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:text="@string/text_view_nombreCompleto"
                    android:id="@+id/text_view_nombreCompleto"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:text="@string/text_view_carrera"
                    android:id="@+id/text_view_carrera"
                    />


                <TextView
                    android:layout_gravity="start"
                    android:id="@+id/text_view_redesSociales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="11dp"
                    android:text="@string/text_view_redesSociales"
                    android:textSize="20sp" />
            </LinearLayout>
        <!--=======Layouts========= -->
            
            

        <!--=======redes sociales  ============-->
            <LinearLayout
                android:paddingTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:onClick="shareImage"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/facebook"
                    android:id="@+id/Imagen_idFacebook"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="130dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:text="@string/text_view_facebook"
                    android:id="@+id/text_view_facebook"
                    />
                <!--=======facebook (fin) ============-->

                <!--=======GitHub ============-->
                <ImageView
                    android:onClick="shareImage"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/github"
                    android:id="@+id/Imagen_idGitHub"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="130dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:text="@string/text_view_github"
                    android:id="@+id/text_view_github"
                    />

                <!--=======GitHub (fin)============-->
            </LinearLayout>
        <!--=======Gmail ============-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:onClick="shareImage"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/gmail"
                    android:id="@+id/Imagen_idGmail"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:text="@string/text_view_gmail"
                    android:id="@+id/text_view_gmail"
                    />
                <!--=======Gmail (fin)============-->

                <!--=======telefono ============-->
                <ImageView
                    android:onClick="shareImage"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:id="@+id/Imagen_telefono"
                    android:layout_marginLeft="30dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/phone" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="130dp"
                        android:id="@+id/text_view_telefono"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="@string/text_view_telefono"
                        android:textAlignment="center"
                        android:textSize="15dp" />
                <!--=======telefono (fin)============-->
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:paddingTop="50dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/text_view_PoweredBy"
                    android:id="@+id/text_view_PoweredBy"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
